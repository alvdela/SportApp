<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:translationY="0dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_record"
            app:title="@string/bar_tittle_record"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/gray_dark"
            app:titleTextColor="@color/white"
            app:layout_scrollFlags="scroll|enterAlways"/>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray_dark">
        <LinearLayout
            android:id="@+id/lySport_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/gray_light">
            <ImageView
                android:id="@+id/ivBike"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:src="@mipmap/bike"
                android:background="@color/gray_medium"
                android:onClick="loadRunsBike"/>
            <ImageView
                android:id="@+id/ivRoller"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:src="@mipmap/rollerskate"
                android:background="@color/gray_medium"
                android:onClick="loadRunsRoller"/>
            <ImageView
                android:id="@+id/ivRunner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:src="@mipmap/running"
                android:background="@color/gray_medium"
                android:onClick="loadRunsRunner"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recyclers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_light">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclers_records"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"/>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fgHome"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/salmon_dark"
        android:src="@drawable/camino"
        android:translationY="-90dp"
        android:translationX="-20dp"
        app:maxImageSize="50dp"
        android:onClick="goHome"/>

</LinearLayout>